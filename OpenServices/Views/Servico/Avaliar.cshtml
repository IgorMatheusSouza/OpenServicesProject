@model OpenServices.Models.AvaliacaoViewModel

@{
    ViewData["Title"] = "BuscarPrestador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<span style="float:right"> @Model.usuario.Email | <a asp-controller="Autenticacao" asp-action="Login">sair</a> </span>
<br />
<br />
<h3 class="text-center">Avalie o trabalho do prestador de serviço</h3>

<br />
<br />
<form asp-action="Avaliar" class="form-signin">
    <div class="form-container col-md-6" style="margin-left:26%">
        <div class="label-float-select row">
            <div class="col-md-6">
                <label>Nota</label>
                <select asp-for="Nota" class="form-control" type="text" required>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>
                    <option>8</option>
                    <option>9</option>
                    <option>10</option>
                </select>
            </div>
        </div>
        <br />
        <div class="label-float">
            <label>Avaliação</label>
            <textarea rows="5" asp-for="Descricao" type="text" class="form-control" required id="slo" value=" "></textarea>
        </div>
        <br />
        <br />
        <br />
        <button class="btn btn-primary" type="submit">Salvar Avaliação</button>
    </div>
</form>
